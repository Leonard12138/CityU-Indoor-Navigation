<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Toolbar widget -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#367CC6"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="  WiFi Data Collection"
        app:titleTextColor="#ffff" />

    <include layout="@layout/date_input_layout" />

    <Button
        android:id="@+id/wifi_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/wifi_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/start_new_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start New Scan"
        tools:ignore="HardcodedText" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wifi_information_exhibit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
